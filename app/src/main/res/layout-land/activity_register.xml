<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/regcolor"
    android:scrollbars="vertical"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:padding="10dp"
        android:text="Registration Form"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="General Information"
        android:textSize="20dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <EditText
        android:id="@+id/rnameid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name" />

    <EditText
        android:id="@+id/rsemailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email-Id" />

    <EditText
        android:id="@+id/rvtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Vehicle"
        android:inputType="text|textPassword" />

    <EditText
        android:id="@+id/rvid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Vehicle No."
        android:inputType="textPassword|number" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Contact Details"
        android:textSize="20dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <EditText
        android:id="@+id/runoid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact Number"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/rsstreetid"
            android:layout_width="170dp"
            android:text=""
            android:layout_height="wrap_content"
            android:hint="StreetNo" />

        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent" />

        <EditText
            android:text=""
            android:id="@+id/rsareaid"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:hint="Area" />


    </LinearLayout>


    <EditText
        android:text=""
        android:id="@+id/rscityid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <Button
        android:id="@+id/rsbid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:text="Submit"
        android:textStyle="bold" />
</LinearLayout>
</ScrollView>